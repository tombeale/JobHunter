@using BlueSite.Data.Entities
@if (Company != null)
{

    <table cellspacing="0" cellpadding="0" border="0">
        <tr>
            <td colspan="3">
                <label class="form-label" for="action-title">Address</label>
                <input type="text" @bind-value="Company.Address1" id="address1" class="form-control bs-input-full inset" />
            </td>
        </tr>
        <tr>
            <td colspan="3">
                <label class="form-label" for="action-title">Address 2</label>
                <input type="text" @bind-value="Company.Address2" id="address2" class="form-control bs-input-full inset" />
            </td>
        </tr>
        <tr>
            <td>
                <label class="form-label" for="action-title">City</label>
                <input type="text" @bind-value="Company.City" id="city" class="form-control bs-input-full inset" />
            </td>
            <td>
                <label class="form-label" for="action-title">State</label>
                <input type="text" @bind-value="Company.State" id="state" class="form-control bs-input-full inset" />
            </td>
            <td>
                <label class="form-label" for="action-title">Zip Code</label>
                <input type="text" @bind-value="Company.Zip" id="zip" class="form-control bs-input-full inset" />
            </td>
        </tr>

    </table>
}
else if (Contact != null)
{
    <table cellspacing="0" cellpadding="0" border="0">
        <tr>
            <td colspan="3">
                <label class="form-label" for="action-title">Address</label>
                <input type="text" @bind-value="Contact.Address1" id="address1" class="form-control bs-input-full inset" />
            </td>
        </tr>
        <tr>
            <td colspan="3">
                <label class="form-label" for="action-title">Address 2</label>
                <input type="text" @bind-value="Contact.Address2" id="address2" class="form-control bs-input-full inset" />
            </td>
        </tr>
        <tr>
            <td>
                <label class="form-label" for="action-title">City</label>
                <input type="text" @bind-value="Contact.City" id="city" class="form-control bs-input-full inset" />
            </td>
            <td>
                <label class="form-label" for="action-title">State</label>
                <input type="text" @bind-value="Contact.State" id="state" class="form-control bs-input-full inset" />
            </td>
            <td>
                <label class="form-label" for="action-title">Zip Code</label>
                <input type="text" @bind-value="Contact.Zip" id="zip" class="form-control bs-input-full inset" />
            </td>
        </tr>

    </table>
}

@code {
    [Parameter]
    public Company Company { get; set; }

    [Parameter]
    public Contact Contact { get; set; }


}
